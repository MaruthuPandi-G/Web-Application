@{
    Layout = null;
}
@model IEnumerable<CourseDetail>

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>simpliLearn</title>

  @*Bootstrap 5 compiled Java Script*@
    <script src="~/bootstrap/js/BootstrapJavaScript.js"></script>

    @*Bootstrap 5 compiled Css*@
    <link href="~/bootstrap/css/BootstrapStyle.css" rel="stylesheet" />

    @*Fontawesome 4.7.0*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" ><link />

  
    @*My Style Sheet*@
    <link href="~/css/MyStyle.css" rel="stylesheet" />

   <script src="~/jquery/MyScript.js"></script>

   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
    <div class="card">
       
            <div class="card-header bg-about mb-4 mt-3">
                <p class="display-3 text-white text-center">Course Details</p>
            </div>
             <div class="card-body">
            <div class="table-responsive"></div>
            <table class="table table-hover table-white table-borderless">
                <thead>
                    <tr>                        
                        <th class="lead fw-bold text-success">Course Name</th>
                        <th class="lead fw-bold text-success">Course Image</th>
                        <th  class="text-center lead fw-bold text-success">Course Description</th>
                        <th colspan="2"  class="text-end"><span><a asp-action="Add" asp-controller="Admin" class="nav-link">Add <img src="~/images/add.png" asp-append-version="true" /></a></span></th>
                    </tr>
                </thead>
    @if (Model != null)
    {
        foreach (var items in Model)

        {
            string photoPath="/images/" + (@items.CourseImage ?? "noimage.jpg");
            
                <tbody>
                    <tr>                        
                        <td>@items.CourseName</td>
                        <td align="center"><img src=@photoPath height="20px" width="20px" asp-append-version="true"/></td>
                        <td>@items.CourseDescription</td>                        
                        <td><a asp-action="Edit" asp-controller="Admin" asp-route-id=@items.CourseId class=""><img src="~/images/edit.png"></a></td>
                        <td><a asp-action="Delete" asp-controller="Admin" asp-route-id=@items.CourseId class=""><img src="~/images/delete.png"></a></td>
                    </tr>
                </tbody>

        }
    }
                </table>
        </div>
    </div>

</body>
</html>

