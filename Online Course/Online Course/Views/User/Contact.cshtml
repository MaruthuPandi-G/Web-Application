            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-8">
                <form asp-action="Contact" asp-controller="User" method="post">
                
                    <textarea asp-for="FeedbackMessage" class = "form-control form-control-lg bg-primary bg-gradient bg-opacity-25", placeholder = "Enter Your Message"></textarea>
                    <span asp-validation-for="FeedbackMessage" class = "text-danger"></span><br /><br /><br />
                                        
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" asp-for="Name" class = "form-control form-control-lg mb-3 bg-primary bg-gradient bg-opacity-25", placeholder = "Enter Your Name"/>
                            <span asp-validation-for="Name" class = "text-danger"></span>               
                                                       
                        </div>
                        <div class="col-md-6">
                            <input type="text" asp-for="Email" class = "form-control form-control-lg mb-3 bg-primary bg-gradient bg-opacity-25", placeholder = "Enter Your E-mail"/>
                            <span asp-validation-for="Email" class = "text-danger"></span>
                        </div>
                    </div><br /><br />
                    <input type="text" asp-for="Subject" class = "form-control form-control-lg bg-primary bg-gradient bg-opacity-25", placeholder = "Enter The Subject Name"/>
                      <span asp-validation-for="Subject" class = "text-danger"></span><br />
                   
                    <h4 class="fw-bold text-success text-center"> @ViewBag.Feedback</h4>
                    <br />

                    <button type="submit" class="btn btn-outline-primary  mb-3 ">Request</button>

                </form>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="card bg-primary bg-gradient bg-opacity-25  mb-5 address">
                        <div class="card-body p-2 ">
                            <p class="text-center">
                                <img src="~/Images/phone.png" class="img-fluid" />
                            </p>
                            <h5 class="text-center">PHONE NUMBER</h5>
                            <p class="text-center lead text-dark fw-bold"> +91 8967456789 </p>
                        </div>
                    </div>
                    <div class="card bg-primary bg-gradient bg-opacity-25 address">
                        <div class="card-body p-2">
