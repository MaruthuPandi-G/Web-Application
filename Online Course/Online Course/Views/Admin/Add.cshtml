<body class="container">

   <form enctype="multipart/form-data" asp-action="Add" asp-controller="Admin" method="post">
        <div class="mb-3 mt-3">
               <label class="form-label fw-bold">Course Name:</label>
               <input type="text" asp-for="CourseName" class="form-control" placeholder = "Enter name" />               
        </div>
         <div class="mb-3 mt-3">   
             <label class="form-label fw-bold">Course Image:</label>
            <div class="custom-file">
                <input asp-for="CourseImage" class="form-control custom-file-input" type="file" />
           

            </div>         
        </div>
         <div class="mb-3 mt-3">
               <label class="form-label fw-bold">Course Name:</label>
               <textarea asp-for="CourseDescription" class = "form-control form-control-md", placeholder = "Description"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
